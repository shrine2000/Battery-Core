<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:background="#FFFFFF"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/charge_percentage_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_textview"
                        android:orientation="vertical">

                        <!--<batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:text="Charge" />-->

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/present_charge"

                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="78%"
                            android:textSize="45dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight=".6"

                    android:background="@drawable/rounded_textview"
                    android:gravity="center">

                    <eo.view.batterymeter.BatteryMeterView
                        android:id="@+id/battery_meter_view"

                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:batteryMeterChargeLevel="80"
                        app:batteryMeterChargingColor="#4caf50"
                        app:batteryMeterColor="#0277bd"
                        app:batteryMeterCriticalChargeLevel="15"
                        app:batteryMeterCriticalColor="#d84315"
                        app:batteryMeterIndicatorColor="@android:color/transparent"
                        app:batteryMeterIsCharging="true"
                        app:batteryMeterTheme="rounded"
                        app:batteryMeterUnknownColor="#e0e0e0" />
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/min_current"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Battery Voltage"
                            android:textColor="@android:color/darker_gray" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/present_current"

                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Battery Voltage"
                            android:textColor="@android:color/darker_gray"
                            android:textStyle="bold" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/max_current"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:text="Battery Voltage"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:orientation="horizontal">

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Min"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="11sp" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Present"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="13sp" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Max"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".08"
                            android:orientation="vertical">

                            <com.db.williamchart.view.LineChartView
                                android:id="@+id/line_chart_view"
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:padding="10dp"
                                android:paddingTop="20dp"
                                android:textColor="@android:color/darker_gray"
                                app:chart_axis="y"
                                app:chart_labelsColor="@android:color/darker_gray"
                                app:chart_labelsSize="10sp"
                                app:chart_lineColor="@color/design_default_color_secondary"
                                app:chart_lineThickness="2dp"
                                app:chart_smoothLine="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:visibility="gone">

                                <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:textAllCaps="false"
                                    android:textSize="10sp" />

                                <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="30s"
                                    android:textAllCaps="false"
                                    android:textSize="10sp" />

                                <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="25s"

                                    android:textAllCaps="false"
                                    android:textSize="10sp" />

                                <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="10s"

                                    android:textAllCaps="false"
                                    android:textSize="10sp" />

                                <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="end|end"

                                    android:layout_weight="1"
                                    android:text="5s"
                                    android:textAllCaps="false"
                                    android:textSize="10sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight=".92"

                            android:gravity="center"
                            android:rotation="-90"
                            android:text="Usage (mA)"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="10sp" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"
                            android:text="Battery Capacity" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/battery_capacity_tv"
                            style="@style/TextMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"
                            android:text="5123 mA"

                            android:textAllCaps="false" />


                    </FrameLayout>

                    <!--  <FrameLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="16dp"
                          android:animateLayoutChanges="true">


                          <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingVertical="8dp"
                              style="@style/TextLarge"

                              android:text="Charged today" />

                          <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                              android:id="@+id/charged_today_tv"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="end|bottom"
                              android:layout_marginEnd="16dp"
                              android:padding="8dp"
                              android:text="3 times"
                              style="@style/TextMedium"

                              android:textAllCaps="false" />


                      </FrameLayout>-->


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"

                            android:text="Health" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/health_tv"
                            style="@style/TextMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"
                            android:text="Good"

                            android:textAllCaps="false" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"

                            android:text="Power" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/power_tv"
                            style="@style/TextMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"

                            android:text="Unplugged"
                            android:textAllCaps="false" />


                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"

                            android:text="Temperature" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/temperature_tv"
                            style="@style/TextMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"

                            android:text="29 C"
                            android:textAllCaps="false" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"

                            android:text="Voltage" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/voltage_tv"
                            style="@style/TextMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"

                            android:text="3672 mV"
                            android:textAllCaps="false" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"

                            android:text="Charging type" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/charge_type_tv"
                            style="@style/TextMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"
                            android:text="USB"

                            android:textAllCaps="false" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"

                            android:text="Level" />

                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            android:id="@+id/level_tv"
                            style="@style/TextMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"
                            android:text="38%"
                            android:textAllCaps="false" />


                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"

                        android:layout_height="0.3dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="16dp"
                        android:background="@color/vertical_line" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"

                            android:text="Show battery percentage" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/notification_switch"
                            android:theme="@style/ToggleSwitchTheme"


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"

                            android:textAllCaps="false" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:id="@+id/battery_usage_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"
                            android:text="Battery usage stats" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:animateLayoutChanges="true">


                        <batterysaver.batterychargingapp.batterypercentage.batterywidget.view.CustomTextView
                            style="@style/TextLarge"
                            android:id="@+id/settings_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"

                            android:text="Settings" />


                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>